<body>
  <div class="login-form">
    <form action="/add_user" method="post" enctype="multipart/form-data">
      <h1>Login</h1>
      <div class="content">
        <div class="input-field">

          <input class="form-control w-25" required type="text" name="full_name" id="full_name-input"
            placeholder="Full name" />
        </div>
        <div class="input-field">

          <input required class="form-control w-25" type="email" name="email" id="email-input" placeholder="Email" />

        </div>
        <div class="input-field">
          <label class="form-label" for="profile_picture-input">Profile picture </label>
          <input class="form-control w-25" required type="file" name="profile_picture" id="profile_picture-input" />
        </div>
        <div class="input-field">
          <label class="form-label" for="cv_file-input"> Upload Your CV File</label>
          <input required class="form-control w-25" type="file" name="cv_file" id="cv_file-input" />
        </div>

      </div>
      <div class="action">

        <button class="btn btn-primary d-block " type="submit">Send</button>

      </div>
    </form>
  </div>

